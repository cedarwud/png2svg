{
  "template": "t_performance_lineplot",
  "title": "Performance vs Time",
  "canvas": {"width": 800, "height": 300},
  "axes": {
    "plot": {"x": 80, "y": 40, "width": 640, "height": 200},
    "x": {
      "label": "Time (s)",
      "min": 0,
      "max": 10,
      "ticks": [0, 5, 10]
    },
    "y": {
      "label": "Throughput (Mbps)",
      "min": 0,
      "max": 100,
      "ticks": [0, 50, 100]
    }
  },
  "series": [
    {
      "id": "baseline",
      "label": "Baseline",
      "color": "#1f77b4",
      "points": [
        {"x": 0, "y": 20},
        {"x": 5, "y": 70},
        {"x": 10, "y": 90}
      ]
    },
    {
      "id": "handover",
      "label": "Handover",
      "color": "#ff7f0e",
      "dashed": true,
      "points": [
        {"x": 0, "y": 10},
        {"x": 5, "y": 50},
        {"x": 10, "y": 80}
      ]
    }
  ]
}
